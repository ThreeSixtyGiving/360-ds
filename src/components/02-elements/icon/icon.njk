<div class="icon">
  {% if overlaid_text %}
    <span class="icon__overlaid-text">{{ overlaid_text }}</span>
  {% elseif black %}
    <i class="material-icons icon__mat-icon-black">{{ icon_name }}</i>
  {% else %}
    <i class="material-icons icon__mat-icon">{{ icon_name }}</i>
  {% endif %}
</div>
