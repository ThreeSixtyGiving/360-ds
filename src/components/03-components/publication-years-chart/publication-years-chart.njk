<ul class="publication-years-chart">
  {% for item in chart %}
  <li
    class="publication-years-chart__item"
    style="--transparency: {{ item.value / 10 }};"
  >
    <div
      class="publication-years-chart__block"
      aria-label="{{ item.detail }}"
      title="{{ item.detail }}"
    ><span></span></div>
    <div class="publication-years-chart__label">{{ item.label }}</div>
  </li>
  {% endfor %}
</ul>
